<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.tianqi.plankton.system.mapper.RoleMenuMapper">
    <resultMap id="BaseResultMap" type="top.tianqi.plankton.system.entity.RoleMenu">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="modify_time" jdbcType="TIMESTAMP" property="modifyTime" />
        <result column="menu_id" jdbcType="INTEGER" property="menuId" />
        <result column="role_id" jdbcType="INTEGER" property="roleId" />
    </resultMap>
    <select id="findListByRoleIds" resultMap="BaseResultMap">
        select rm.* from role_menu rm where 1=1 and rm.role_id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>
