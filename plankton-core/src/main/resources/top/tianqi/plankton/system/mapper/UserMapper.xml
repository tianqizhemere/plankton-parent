<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.tianqi.plankton.system.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="top.tianqi.plankton.system.entity.User">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="modify_time" jdbcType="TIMESTAMP" property="modifyTime" />
        <result column="code" jdbcType="VARCHAR" property="code" />
        <result column="model" jdbcType="VARCHAR" property="model" />
        <result column="version_code" jdbcType="VARCHAR" property="versionCode" />
        <result column="upload_counter" jdbcType="INTEGER" property="uploadCounter" />
        <result column="phone" jdbcType="VARCHAR" property="phone" />
        <result column="qq" jdbcType="VARCHAR" property="qq" />
        <result column="user_mode" jdbcType="VARCHAR" property="userMode" />
        <result column="is_enable" jdbcType="INTEGER" property="isEnable" />
        <result column="login_time" jdbcType="TIMESTAMP" property="loginTime" />
    </resultMap>

    <select id="findUser" resultMap="BaseResultMap">
        select u.* from user u
        <where>
            <if test="code != null">
                u.code = #{code}
            </if>
        </where>

    </select>
    <select id="findPage" resultMap="BaseResultMap">
        select u.* from user u where 1=1
        <if test="code != null and code != ''">
           and u.code like '%${code}%'
        </if>
        order by u.create_time desc
    </select>
</mapper>
